{% set title_size = title_size|default('default') %}
<article class="uk-article">
    <h1 class="{{ title_size == 'default' ? 'uk-article-title' : ('uk-article-' ~ title_size)}}">
        <a href="{{ path("app.post", { name : blog.slug }) }}">{{ blog.title }}</a>
    </h1>
    <p class="uk-article-meta">
        Posted on {{ blog.date | date('F jS Y') }}.
    </p>

    {{ blog.summary | markdown }}

    <div class="uk-grid">
        <div class="uk-width-1-2">
            <a href="{{ path("app.post", { name : blog.slug }) }}">Read whole post</a>
        </div>
        <div class="uk-width-1-2 uk-text-right">
        </div>
    </div>
    <hr>
</article>
