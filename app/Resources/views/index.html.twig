{% extends 'layout.html.twig' %}

{% block header %}
    <a class="header big" href="{{ path("app.index") }}"></a>
{% endblock %}

{% block sidebar %}
    <div class="uk-panel uk-panel-box">
        <h3>Recent posts</h3>
        <ul class="uk-list uk-list-line">
            {% for post in blogs | slice(0, 10) %}
                <li><a href="{{ path("app.post", { name: post.slug }) }}">{{ post.title }}</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

{% block content %}
    {% for blog in blogs %}
        {% include 'summary.html.twig' with {blog : blog} only %}
    {% endfor %}
{% endblock %}
